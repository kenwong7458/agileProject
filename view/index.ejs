  <link rel="stylesheet" href="/css/bootstrap/css/bootstrap.css">
  <!-- <link rel="stylesheet" href="/css/bootstrap/css/bootstrap-theme.min.css"> -->

  <!--js-->
  <script src="/kendo-ui/js/jquery.min.js"></script>
  <script src="/kendo-ui/js/kendo.all.min.js"></script>
  <script type="text/javascript" src="/css/bootstrap/js/bootstrap.min.js"></script>
  <script src="/js/restaurants.js"></script>
</head>

<body>
  <!-- <div class="container"> -->
  <div class="row">
    <div class="col-md-1">
      <nav role="navigation">
        <div id="menuToggle">
          <input type="checkbox" />
          <span></span>
          <span></span>
          <span></span>
          <ul id="menu">
            <p>
              <h4>Welcome,
                <%= username %> !</h4>
              <% for (const msg of messages) { %>
              <p>
                <%= msg %>
              </p>
              <% } %>
            </p>
            <a href="/index">
              <li>Home</li>
            </a>
            <a href="/ohMyKing/new">
              <li>Create New</li>
            </a>
            <a href="/ohMyKing/list">
              <li>My Cart</li>
            </a>
            <a href="/login" action="/logout" method="POST">
              <li>
                Logout
              </li>
            </a>
          </ul>
        </div>
      </nav>
    </div>
    <!--content-->
    <div class="col-md-11">
        <div id="example">
            <div id="grid"></div>

            <script>
                $(document).ready(function() {
                    $("#grid").kendoGrid({
                        dataSource: {
                            data: products,
                            schema: {
                                model: {
                                    fields: {
                                        RestaurantName: { type: "string" },
                                        District: { type: "string" },
                                        Area: { type: "string" },
                                        CategoryName: { type: "string" }
                                    }
                                }
                            },
                            pageSize: 5
                        },
                        height: 550,
                        scrollable: true,
                        sortable: true,
                        filterable: true,
                        pageable: {
                            input: true,
                            numeric: false
                        },
                        columns: [
                            "RestaurantName",
                            { field: "District", title: "District", width: "130px" },
                            { field: "Area", title: "Area", width: "130px" },
                            { field: "CategoryName", width: "130px" }
                        ]
                    });
                });
            </script>
    </div>
  </div>
