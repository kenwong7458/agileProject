<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title></title>
</head>

<body>
    <h1>Restaurant info.</h1>

    <a href="/">back</a>
    <a href="/ohMyKing/rate?id=<%= restaurant._id %>">rate</a>
    <a href="/ohMyKing/update?id=<%= restaurant._id %>">update</a>
    <a href="/ohMyKing/delete?id=<%= restaurant._id %>">delete</a>

    <% for (const msg of messages) { %>
    <p>
        <%= msg %>
    </p>
    <% } %>

    <table border="1">
        <tr>
            <th>Owner</th>
            <td>
                <%= restaurant.owner %>
            </td>
        </tr>
        <tr>
            <th>Name</th>
            <td>
                <%= restaurant.name %>
            </td>
        </tr>
        <tr>
            <th>Borough</th>
            <td>
                <%= restaurant.borough %>
            </td>
        </tr>
        <tr>
            <th>Cuisine</th>
            <td>
                <%= restaurant.cuisine %>
            </td>
        </tr>

        <% if (restaurant.address) { %>
        <% const addr = restaurant.address %>
        <tr>
            <th>Street</th>
            <td>
                <%= addr.street %>
            </td>
        </tr>
        <tr>
            <th>Building</th>
            <td>
                <%= addr.building %>
            </td>
        </tr>
        <tr>
            <th>Zipcode</th>
            <td>
                <%= addr.zipcode %>
            </td>
        </tr>
        <% if (addr.coord) { %>
        <tr>
            <th>Coord</th>
            <td>
                [
                <%= addr.coord[0] %>,
                <%= addr.coord[1] %>]
                <a href="https://www.google.com/maps/search/?api=1&query=<%= addr.coord[0] %>,<%= addr.coord[1] %>">Google
                    Map</a>
            </td>

        </tr>
        <% } %>
        <% } %>
    </table>

    <h2>Ratings</h2>

    <table border="1">
        <tr>
            <th>User</th>
            <th>Score</th>
        </tr>
        <% for (const {user, score} of restaurant.grades) { %>
        <tr>
            <td>
                <%= user %>
            </td>
            <td>
                <%= score %>
            </td>
        </tr>
        <% } %>
    </table>

    <% if (restaurant.photoMimetype) { %>
    <img src="/image/?id=<%= restaurant._id %>" width="300" height="200" alt="restaurant pic">
    <% } %>
</body>

</html>